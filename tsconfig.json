{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "~": [
        "./src"
      ],
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "assets"
  ]
}